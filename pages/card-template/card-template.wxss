.card-container{
  border-radius: 8rpx;
  height: 300rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  
}

.cardImage{
  width: 100%;
  height: 240rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.joinCount{
  width: 100%;
  height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
  background-color: white;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}