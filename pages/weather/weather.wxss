/* pages/weather/weather.wxss */
.main{
  width: 100%;
  height: 100%;
  background-color: #eee;
}
.top {
  display: flex;
  height: 130rpx;
  background-color: #f49b1e;
  border-bottom: 1px solid #1aad19;
  line-height: 120rpx;
  flex-direction: row;
}

.top-left {
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #fff;
  margin-left: 20rpx;
  border-radius: 10rpx;
}

.top-right {
  height: 120rpx;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  color: #fff;
}

.top-right-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  width: 200rpx;
  font-size: 30rpx;
}

.top-right-buttom {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 40rpx;
  font-size: 20rpx;
}
